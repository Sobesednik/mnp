  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch mnp",
      "program": "${workspaceFolder}/build/bin/index.js",
      "env": {
        "BABEL_ENV": "debug",
        "NODE_DEBUG": "mnp",
      },
      "cwd": "${workspaceFolder}/../../mnpjs",
      "args": [
        "package2", // package-name
        // "-l", // local
        // "-c", // check
        // "-l", // local
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/node_modules/.bin/zoroaster",
      "args": [
        "test/spec/integration.js",
        "-b",
        "-w",
      ],
      "env": {
        "BABEL_ENV": "debug",
        "ZOROASTER_TIMEOUT": "9999999",
        "NODE_DEBUG": "mnp",
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
